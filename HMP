#include <amxmodx>

#pragma semicolon 1

new const PLUGIN[ ]  = "H M P";
new const VERSION[ ] = "1.0";
new const AUTHOR[ ]  = "sezekz";

static const g_hmp[ ]= "b";
static const g_hmpMsg[ ]= "SERVERUL CS S-A MUTAT !!";

new SyncHudMessage;

public plugin_init( )
{
	register_plugin(PLUGIN, VERSION, AUTHOR);
	
	SyncHudMessage = CreateHudSyncObj( );
	
	set_task( 1.0, "ShowMessage", _, _, _, g_hmp );
}

public ShowMessage( )
{
	new Players[32], iNum;
	get_players(Players, iNum, "ch");
	
	for( new i = 0; i < iNum; i++ )
	{
		set_hudmessage(85, 255, 255, 0.03, 0.20, 0, 6.0, 1.0, 0.0, 1.0, 3 );
		ShowSyncHudMsg(0, SyncHudMessage, "%s", g_hmpMsg);
	}
}
